<h1><%= @place.name %></h1>
<p><%= @place.address %></p>
<p><%= @place.phone_number %></p>
<p><%= @place.google_url %></p>
<p><%= @place.types_name %></p>
<p><%= @place.types_number %></p>
<% if @place_pictures %>
  <% @place_pictures.each do |place_picture| %>
    <%= image_tag place_picture.picture.thumb.url %>
  <% end %>
<% end %>

<% if @today_open %>
  <p><%= @today_open %></p>
<% end %>

<% if @open_timing %>
  <% if @open_timing[0][:open_forever] %>
    <p><%= @open_timing[0][:open_forever] %></p>
  <% else %>
    <% @open_timing.each do |a| %>
      <p><%= "#{a[:open_day]} #{a[:open_time].insert(2, "時").insert(5, "分")} 〜 #{a[:close_time].insert(2, "時").insert(5, "分")}" %></p>
    <% end %>
  <% end %>
<% else %>
  <p>営業時間不明</p>
<% end %>

<% if @place.mymap.user == current_user %>
  <%= link_to "編集", edit_place_path(@place) %>
  <%= link_to "削除", @place, method: :delete %>
<% end %>

<%= link_to "このスポットをGoogleMapで見る", @place.google_url %>
