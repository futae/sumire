<h1>ユーザを検索</h1>
<div class="col-md-6">
  <%= form_tag user_searchs_path, :method => :get do %>
    <div class="form-group">
      <%= text_field_tag :search %>
      <%= submit_tag 'Search', :name => nil %>
    </div>
  <% end %>
</div>

<ul>
  <% if @users %>
    <% @users.each do |user| %>
    <li><%= user.name %></li>
    <% end %>
  <% else %>
    <% if @following_users.any? %>
      <% @following_users.each do |user| %>
      <li><%= user.name %></li>
      <% end %>
    <% end %>
    <% @facebook_friends.each do |user| %>
    <li><%= user.name %></li>
    <% end %>
  <% end %>
</ul>
