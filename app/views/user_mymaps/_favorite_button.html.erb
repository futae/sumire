<% unless current_user.mymaps.include?(mymap) %>
  <% if current_user.favoriting?(mymap) %>
    <%= form_for(current_user.user_mymaps.find_by(mymap_id: mymap.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :mymap_id, mymap.id %>
      <%= f.submit '♥', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.user_mymaps.build) do |f| %>
      <%= hidden_field_tag :mymap_id, mymap.id %>
      <%= f.submit '♡', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
