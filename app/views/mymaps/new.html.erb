<h1>マイマップを作ろう</h1>

<div class="col-md-12">
  <%= form_for @mymap do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :name, "マイマップ名" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :comment, "説明" %>
      <%= f.text_area :comment %>
    </div>

    <div class="form-group">
      <label><%= f.radio_button :status, 0 %>全員に公開</label>
      <label><%= f.radio_button :status, 1 %>フォロワーに公開</label>
      <label><%= f.radio_button :status, 2 %>非公開</label>
    </div>

    <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
  <% end %>
</div>
